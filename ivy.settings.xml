<ivysettings>
  <property name="ivy.checksums" value="" override="true"/>
  <settings defaultResolver="default"/>
  <caches defaultCacheDir="${user.dir}/.ivy2/cache" useOrigin="true"
          artifactPattern="[organisation]/[module]/[type]s/[artifact]-[revision](-[classifier]).[ext]"/>
  <resolvers>
    <filesystem name="local">
      <ivy pattern="${user.dir}/jars/[module]/ivy-[revision].xml"/>
      <artifact pattern="${user.dir}/jars/[artifact]-[revision](-[classifier]).[ext]"/>
      <artifact pattern="${user.dir}/jars/[artifact](-[classifier]).[ext]"/>
    </filesystem>
    <chain name="default" returnFirst="true">
      <resolver ref="local"/>
    </chain>
  </resolvers>
</ivysettings>
